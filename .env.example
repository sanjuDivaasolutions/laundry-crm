APP_NAME="Laundry CRM"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laundry_crm_db
DB_USERNAME=root
DB_PASSWORD=

# ------------------------------------------------------------------------------
# Cache, Queue, Session
# ------------------------------------------------------------------------------
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ------------------------------------------------------------------------------
# Redis (optional, recommended for production)
# ------------------------------------------------------------------------------
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ------------------------------------------------------------------------------
# Mail Configuration
# ------------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@laundry-crm.com"
MAIL_FROM_NAME="${APP_NAME}"

# ------------------------------------------------------------------------------
# AWS (optional)
# ------------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ------------------------------------------------------------------------------
# Pusher/Broadcasting (optional)
# ------------------------------------------------------------------------------
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ------------------------------------------------------------------------------
# Frontend (Vite)
# ------------------------------------------------------------------------------
VITE_APP_API_URL=${APP_URL}/api/v1
VITE_APP_NAME="${APP_NAME}"

# ------------------------------------------------------------------------------
# JWT Authentication
# ------------------------------------------------------------------------------
JWT_SECRET=
JWT_ALGO=HS256
JWT_TTL=3600

# ------------------------------------------------------------------------------
# Multi-Tenant Configuration
# ------------------------------------------------------------------------------

# Base domain for tenant subdomains (e.g., laundry-crm.com)
# Tenants will be accessible at: {subdomain}.{base_domain}
TENANT_BASE_DOMAIN=localhost

# Central app subdomain (for signup, login without tenant context)
TENANT_CENTRAL_SUBDOMAIN=app

# Trial period in days (14 days full access)
TENANT_TRIAL_DAYS=14

# Grace period after payment failure (7 days)
TENANT_GRACE_PERIOD_DAYS=7

# Strict tenant scope (recommended: true for production)
# When true, queries without tenant context fail-safe
TENANCY_STRICT_SCOPE=true

# Action when no tenant context: throw, empty, or log
TENANCY_MISSING_CONTEXT_ACTION=empty

# Allow X-Tenant-ID header for internal service calls
TENANCY_ALLOW_HEADER=false

# Allow super-admin tenant impersonation
TENANCY_ALLOW_IMPERSONATION=true

# ------------------------------------------------------------------------------
# Stripe Billing
# ------------------------------------------------------------------------------
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs for subscription plans
STRIPE_STARTER_PRICE_ID=price_xxx
STRIPE_PROFESSIONAL_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxx

# ------------------------------------------------------------------------------
# Internal Service Communication (optional)
# ------------------------------------------------------------------------------
# Secret for signing internal service-to-service requests
# Generate with: php artisan key:generate --show
INTERNAL_SERVICE_SECRET=

# ------------------------------------------------------------------------------
# Model Caching (optional)
# ------------------------------------------------------------------------------
MODEL_CACHE_ENABLED=false
MODEL_CACHE_USE_DATABASE_KEYING=true
MODEL_CACHE_STORE=model

# ------------------------------------------------------------------------------
# Debugging (development only)
# ------------------------------------------------------------------------------
CLOCKWORK_ENABLE=true
